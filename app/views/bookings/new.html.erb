<%= render 'shared/header' %>

<div class="container">
  <div class="page-header">
    <h1><%= @flight.airport.city.name %> to <%= @flight.destination.city.name %> <small><%= @flight.plane.airline.name %></small></h1>
  </div>
  <div class="row">
    <div class="col-lg-6">
      <div class="panel panel-default">
        <div class="panel-heading">Flight Details</div>
        <ul class="list-group">
          <li class="list-group-item"><h4 class="capitalize">Price: <%= number_to_currency(@flight.price, locale: :ng) %></h4></li>
          <li class="list-group-item"><h4 class="capitalize">Departure Airport: <%= @flight.airport.name %>, <%= @flight.airport.city.name %></h4></li>
          <li class="list-group-item"><h4 class="capitalize">Arival Airport: <%= @flight.destination.name %>, <%= @flight.destination.city.name %></h4></li>
          <li class="list-group-item"><h4 class="capitalize">Departure Date: <%= @flight.departure.strftime('%B %-m, %Y') %></h4></li>
          <li class="list-group-item"><h4 class="capitalize">Departure Time: <%= @flight.departure.strftime('%l:%M %P %Z') %></h4></li>
        </ul>
      </div>
    </div>
    <div class="col-lg-6">
      <%= render 'plane' %>
    </div>
  </div>
</div>
<div class="container">
  <div class="page-header">
    <h1>Bookings</h1>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">Passengers</div>
        <div class="panel-body">
          <%= render 'form'%>
        </div>
        <div class="panel-footer">&nbsp;</div>
      </div>
    </div>
  </div>
</div>
